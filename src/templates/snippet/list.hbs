<ul>
{{#each snippets}}
	<li class="snippets-item" data-id="{{this._id}}">
		<div class="avatar"></div>
		<div class="filename"><a href="#" title="Open snippet '{{this.filename}}'" class="snippet-edit-button" data-id="{{this._id}}">{{this.filename}}</a></div>
		<div class="description">{{this.description}}</div>
		<div class="language">Language: {{this.lang}}</div>
		<button class="btn snippet-delete-btn" data-id="{{this._id}}">Delete Snippet</button>
		<div class="content edit-disable" data-language="{{this.lang}}">{{this.content}}</div>
	</li>
{{/each}}
</ul>